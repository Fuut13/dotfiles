# kill!
super + Q
	pkill swm
super + q
	killw $(pfw)
super + Escape
	kill -USR1 -x sxhkd

# launcher
super + space
	dmenu_run
super + Return
	urxvt
# move window
super + Down
	wmv 0 10 $(pfw)
super + Up
	wmv 0 -10 $(pfw)
super + Right
	wmv 10 0 $(pfw)
super + Left
	wmv -10 0 $(pfw)

# window resize
super + l
	wrs 10 0 $(pfw)
super + h
	wrs -10 0 $(pfw)
super + j
	wrs 0 -10 $(pfw)
super + k
	wrs 0 10 $(pfw)
